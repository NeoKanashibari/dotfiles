[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>
icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 
label-song-maxlen = 25
label-song-ellipsis = true

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false

format-volume =  <bar-volume>
format-muted =  <label-muted>
label-muted = |===========
label-muted-foreground = ${colors.foreground-alt}
bar-volume-width = 12
bar-volume-foreground-0 = ${colors.step1}
bar-volume-foreground-1 = ${colors.step2}
bar-volume-foreground-2 = ${colors.step3}
bar-volume-foreground-3 = ${colors.step4}
bar-volume-foreground-4 = ${colors.step5}
bar-volume-foreground-5 = ${colors.step6}
bar-volume-foreground-6 = ${colors.step7}
bar-volume-foreground-7 = ${colors.alert}

bar-volume-indicator = |
bar-volume-fill = =
bar-volume-empty = =

bar-volume-empty-foreground = ${colors.foreground-alt}
bar-volume-muted-foreground = ${colors.foreground-alt}
# TODO: toggle pavucontrol
click-right = pavucontrol &

